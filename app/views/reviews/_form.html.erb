<%= form_for([@movie, review]) do |f| %>
  <% if review.errors.any? %>
    <div id="error_explanation">
      <h5><%= pluralize(review.errors.count, "error") %> prohibited this review from being saved:</h5>
      <ul>
      <% review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <br>
  <div class="field">
  <% if review.rating != nil%>
    <%= f.label :Current_Rating %><br>
  <% end %>
      <div id="star-rating" data-score= <%= review.rating %>></div>
  </div>
  <br>
  <div class="field">
    <%= f.label :comment %><br>
    <%= f.text_area :comment %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<script>
  $('#star-rating').raty({
    path: '/assets/',
    scoreName: 'review[rating]',
    score: function() {
          return $(this).attr('data-score');
        }
  });
</script>
